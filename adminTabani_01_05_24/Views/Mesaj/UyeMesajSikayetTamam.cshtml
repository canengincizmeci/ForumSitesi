
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UyeMesajSikayetTamam</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <script>
        var sayacdeger = 5;
        function basla() {
            var sayacim = document.getElementById('sayac');
            var interval = setInterval(function () {
                sayacim.innerHTML = sayacdeger;
                sayacdeger--;
                if (sayacdeger < 0) {
                    clearInterval(interval);
                    ////window.location.href = '/Mesaj/UyeMesajDetay/@ViewBag.MesajID';
                    window.location.href='@Url.Action("UyeMesajDetay", "Mesaj", new { mesaj_id=ViewBag.MesajID})'
                }
            }, 1000);
        }

        window.onload = function () {
            basla();
        };

    
    </script>
    <div class="text-center">
        <h3>Sayın @ViewBag.Adi iligili mesaj hakkında şikayetiniz değerlendirilecektir</h3>
        <p>Kalan süre : <span id="sayac">5</span> saniye</p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
