@model adminTabani_01_05_24.Models.KullaniciMesajlarimPage
@{
    ViewBag.Title = "Mesajlarim";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container">
    <div class="messages">
        <h3>Gelen Mesajlar</h3>
        @foreach (var mesaj in Model.gelenler)
        {
            <div class="message">
                <p><strong>Gönderen:</strong> @mesaj.GonderenAd</p>
                @if (mesaj.mesaj.Length > 30)
                {
                    <p><strong>Mesaj:</strong>@mesaj.mesaj.ToString().Substring(0, 30)...</p>
                }
                else
                {
                    <p><strong>Mesaj:</strong> @mesaj.mesaj</p>

                }
                <p><strong>Tarih:</strong> @mesaj.tarih.ToString()</p>
                <p><a href="@Url.Action("UyeMesajDetay","Mesaj",new {mesaj_id=mesaj.k_mesaj_id})" class="btn btn-primary">Oku</a></p>
            </div>
        }
    </div>
    <div class="messages">
        <h3>Giden Mesajlar</h3>
        @foreach (var mesaj in Model.gidenler)
        {
            <div class="message">
                <p><strong>Alıcı:</strong> @mesaj.aliciAd</p>
                <p><strong>Mesaj:</strong> @mesaj.mesaj</p>
                <p><strong>Tarih:</strong> @mesaj.tarih.ToString()</p>
            </div>
        }
    </div>
</div>

<style>
    .container {
        display: flex;
        justify-content: space-between;
    }

    .messages {
        width: 48%;
        border: 1px solid #ccc;
        padding: 10px;
        margin: 10px 0;
    }

    .message {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
    }

        .message:last-child {
            border-bottom: none;
        }
</style>
