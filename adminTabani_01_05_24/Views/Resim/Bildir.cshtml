
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bildir</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form action="@Url.Action("Bildir","Resim")" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label" for="sikayet">Şikayet Sebebi:</label>
                <textarea rows="5" class="form-control" id="sikayet" name="_sebep"></textarea>
            </div>
            <input type="hidden" name="resimID" value="@ViewBag.ResimID" />
            <button type="submit" class="btn btn-danger">Gönder</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
