
@{
    ViewBag.Title = "ResimPaylas";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="text-center">
    <h3>Merhaba @ViewBag.Ad bizimle resim paylaşmak ister misin?</h3>
</div>

<div class="container">
    <form action="@Url.Action("ResimPaylas","Resim")" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <label for="baslik">Başlık:</label>
        <input type="text" name="_baslik" id="baslik" class="form-control" />
        <label for="aciklama">Açıklama:</label>
        <textarea rows="5" class="form-control" id="aciklama" name="_aciklama"></textarea>
        <label for="dosyaYolu">Dosya yolu:</label>
        <input type="file" name="_dosya" id="dosyaYolu" />
        <button class="btn btn-success" type="submit">Gönder</button>
    </form>
</div>