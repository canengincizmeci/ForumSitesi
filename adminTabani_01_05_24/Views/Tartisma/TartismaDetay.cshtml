@model adminTabani_01_05_24.Models.TartismaDetayPage
@{
    ViewBag.Title = "TartismaDetay";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="text-center">
    <h2>@Model.tartisma.Baslik</h2>
    <p>@Model.tartisma.icerik</p>
    <p>@Model.tartisma.KullaniciAd</p>
    <p>@Model.tartisma.tarih</p>
    @if (ViewBag.Deger == true)
    {
        <a class="btn btn-danger" href="@Url.Action("Bildir", "Tartisma", new {_tartismaID=Model.tartisma.TartismaID})">Bildir</a>
    }
</div>
<div class="text-center">
    <p>Yorum Yapmak için Üye olun  <a href="@Url.Action("Ekle","Kullanici")" class="btn btn-success">Üye Ol</a></p>
</div>

<br />
<div style="margin-bottom:5px;"> </div>
<div class="text-center">
    <h3>Yorumlar</h3>
</div>
<hr />
<div class="container">
    @foreach (var yorum in Model.tartisma_yorumlari)
    {
        <div class="container">
            <p><strong><i>@yorum.yorumcu_ad</i></strong>: @yorum._yorum</p>
            <p>@yorum._tarih</p>
        </div>
        <hr />
    }
</div>