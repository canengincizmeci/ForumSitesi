@model adminTabani_01_05_24.Models.TartismaDetayPage
@{
    ViewBag.Title = "ZiyaretciTartismaDetay";
    Layout = "~/Views/Shared/_ZiyaretciLayout.cshtml";
}

<div class="text-center" style="margin:0px 100px 0px 100px">
    <h3>@Model.tartisma.Baslik</h3>
    <p>@Model.tartisma.icerik</p>
    <h4>@Model.tartisma.KullaniciAd - @Model.tartisma.tarih</h4>
</div>
<div class="text-center">
    <label>Yorum yapmak için Üye olun <a class="btn btn-success" href="/Kullanici/Ekle">Üye Ol</a></label>
</div>


<div class="text-center">
    <h3>Yorumlar</h3>
</div>
<hr />
<div class="container">

    @foreach (var yorum in Model.tartisma_yorumlari)
    {
        <div class="container">
            <p><i><strong>@yorum.yorumcu_ad</strong> : @yorum._yorum</i></p>
            <p>@yorum._tarih</p>
        </div>
        <hr />
    }
</div>



