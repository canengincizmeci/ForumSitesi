@model List<adminTabani_01_05_24.Models.Tartisma>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="text-center" style="border:1px solid gray;background-color:rgb(128, 128, 128,0.2);padding:20px 0px 20px 0px">
    @foreach (var tartisma in Model)
    {
        <div>
            <h3>@tartisma.Baslik</h3>
            @if (tartisma.icerik.Length > 100)
            {
                <p>@tartisma.icerik.Substring(0, 100)...</p>
            }
            else
            {
                <p>@tartisma.icerik</p>
            }
            <p><i>Başlatan: <strong>@tartisma.KullaniciAd</strong></i></p>
            <p>@tartisma.tarih.ToString().Substring(0, 16)</p>
        </div>
        <div>
            @*<a class="btn btn-dark" href="/Tartisma/TartismaDetay/@tartisma.TartismaID">Oku</a>*@
            <a class="btn btn-dark" href="@Url.Action("TartismaDetay","Tartisma",new {tartisma_id=tartisma.TartismaID})">Oku</a>
        </div>
        <hr />
    }
</div>

