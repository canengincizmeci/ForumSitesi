@model  adminTabani_01_05_24.Models.YaziDetayPage
@{
    ViewBag.Title = "UyeYaziDetay";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}





<div class="text-center" style="margin:0px 100px 0px 100px">
    <h3>@Model.yazi.Baslik</h3>
    <p>@Model.yazi.icerik</p>
    <h4>@Model.yazi.yazar_ad - @Model.yazi.tarih</h4>
</div>
<div class="text-center">
    <a class="btn btn-danger" href="@Url.Action("Bildir","Yazilar",new { _yaziID = Model.yazi.yazi_id})">Bildir</a>
</div>



<div class="container">
    <form action="@Url.Action("YorumYap","Yazilar")" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label" for="yorum"></label>
            <textarea class="form-control" name="_yorum" id="yorum" rows="5"></textarea>
        </div>
        <input type="hidden" name="_yaziID" value="@Model.yazi.yazi_id" />
        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>
</div>
<div style="margin-bottom:5px;"></div>

<div class="text-center">
    <h3>Yorumlar</h3>
</div>
<hr />
<div class="container">

    @foreach (var yorum in Model.yaziyorumlari)
    {
        <div class="container">
            <p><i><strong>@yorum.yorumcuAd</strong> : @yorum._icerik</i></p>
            <p>@yorum._tarih</p>
        </div>
        <hr />
    }
</div>
