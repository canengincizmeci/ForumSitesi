@model List<adminTabani_01_05_24.Models.Yazi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}




<div class="text-center" style="border:1px solid gray;background-color:rgb(128, 128, 128,0.2);padding:20px 0px 20px 0px">
    @foreach (var yazi in Model)
    {
        <div>
            <h3>@yazi.Baslik</h3>
            @if (yazi.İcerik.Length > 50)
            {
                <p>@yazi.İcerik.Substring(0, 100)...</p>
            }
            else
            {
                <p>@yazi.İcerik</p>
            }
            <p><i>Yazar: <strong>@yazi.yazar_ad</strong></i></p>
            <p>@yazi.tarih.ToString().Substring(0, 16)</p>
        </div>
        <div>
            @*<a class="btn btn-dark" href="/yazi/yaziDetay/@yazi.yaziID">Oku</a>*@
            <a class="btn btn-dark" href="@Url.Action("yaziDetay","Yazilar",new {yaziID=yazi.yazi_id})">Oku</a>
        </div>
    }
</div>