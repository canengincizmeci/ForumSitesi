@model adminTabani_01_05_24.Models.KullaniciCezalar

@{
    ViewBag.Title = "CezaSayfasi";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}
<style>

    .table-wrap td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 150px;
    }
</style>


<div class="container">
    <h3>@Model.kullanici.Ad</h3>
    <p>Maili: @Model.kullanici.KullaniciMaili</p>
</div>




<div class="container">
    <div class="text-center">
        <h4>Mesaj Şikayetleri</h4>
    </div>
    @if (Model.mesajSikayetleri.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-wrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Şikayetçi</th>
                        <th>Sebep</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mesaj_sikayet in Model.mesajSikayetleri)
                    {
                        <tr>
                            <td>@mesaj_sikayet._sikayetID</td>
                            <td>@mesaj_sikayet.sikayetci</td>
                            <td>@mesaj_sikayet._sebep</td>
                            <td>@mesaj_sikayet.mesaj</td>
                            <td>@mesaj_sikayet._tarih</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>Yazar hakkında mesaj şikayeti yoktur.</p>
    }
</div>

<br />

<div class="container">
    <div class="text-center">
        <h4>Yazi Şikayetler</h4>
