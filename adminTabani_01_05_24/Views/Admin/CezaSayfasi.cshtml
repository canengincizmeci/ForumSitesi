                        <th>Sebep</th>
                        <th>YaziBaslik</th>
                        <th>İçerik</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var yazi_sikayet in Model.yaziSikayetleri)
                    {
                        <tr>
                            <td>@yazi_sikayet._sikayet_id</td>
                            <td>@yazi_sikayet.SikayetciAd</td>
                            <td>@yazi_sikayet._sebep</td>
                            <td>@yazi_sikayet.YaziBaslik</td>
                            <td>@yazi_sikayet.Yazi</td>
                            <td>@yazi_sikayet._tarih</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h5>Yazar hakkında yazı şikayeti yoktur.</h5>
    }
