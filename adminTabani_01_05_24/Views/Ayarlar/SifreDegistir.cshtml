
@{
    ViewBag.Title = "SifreDegistir";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <form action="@Url.Action("SifreDegistir","Ayarlar")" method="post">
        @Html.AntiForgeryToken()
        <label for="_sifre">Şifre:</label>
        <input class="form-control" type="text" name="yeniSifre" id="_sifre" />
        <input type="hidden" name="eskiSifre" value="@ViewBag.Sifre" />
        <button type="submit" class="btn btn-success">Değiştir</button>
    </form>
</div>

