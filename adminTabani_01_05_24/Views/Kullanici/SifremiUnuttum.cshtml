
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SifremiUnuttum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>


    <div class="container mt-5">
        <form action="/Kullanici/SifremiUnuttum" method="post">
            <div class="mb-3">
                <label>Email Adresi</label>
                <input type="email" name="mail" class="form-control" id="mail_btn" placeholder="Mail Adresini Giriniz:">
            </div>
            <button class="btn btn-success" id="btn1" type="submit">Kod Gönder</button>
        </form>
    </div>
    <script>
        var mail = document.getElementById('mail_btn')
        var btn = document.getElementById('btn1')
        btn.addEventListener('click', function (kontrol) {
            if (mail.value.trim() == '') {
                kontrol.preventDefault();
                alert('Lütfen bir mail adresi girin')
            }
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
