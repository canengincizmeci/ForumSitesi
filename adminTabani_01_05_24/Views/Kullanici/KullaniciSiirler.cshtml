@model List<adminTabani_01_05_24.Models.Siir>
@{
    ViewBag.Title = "KullaniciSiirler";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .container {
        align-items: center;
        width: 500px;
        border: none;
        background-color: darkseagreen;
        border-radius: 10%;
        padding: 20px;
        box-sizing: border-box;
        margin: 20px auto;
    }

        .container h3, .container p {
            word-wrap: break-word;
            overflow-wrap: break-word;
        }
</style>

@foreach (var siir in Model)
{
    <div class="container">
        <h3>@siir.siirBaslik</h3>
        @if (siir.icerik.Length > 100)
        {
            <p>@siir.icerik.ToString().Substring(0, 50)...</p>
        }
        else
        {
            <p>@siir.icerik</p>
        }
        <p>@siir.yazar  -  @siir.tarih</p>
        <a href="@Url.Action("UyeSiirDetay", "Siir", new { siir_id=siir.siirID} )" class="btn btn-success">Oku</a>
    </div>
    @*<hr />*@
}
