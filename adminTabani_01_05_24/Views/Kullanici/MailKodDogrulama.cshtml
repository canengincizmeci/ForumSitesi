
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MailKodDogrulama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div>
        @Html.AntiForgeryToken()
        <form action="/Kullanici/MailKodDogrulama" method="post">
            <div class="form-group">
                <label>Kodu Girin</label>
                <input type="hidden" name="kod1" value="@ViewBag.Kod" />
                <input type="hidden" name="id" value="@ViewBag.ID" />
                <input class="form-control" type="text" name="kod2" />
            </div>
            <button class="btn btn-success" type="submit">Onayla</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
