
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>girisKodDogrulama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <script>
        var sayacdeger = 30
        function basla() {
            var sayacim = document.getElementById('sayac')
            var interval = setInterval(function () {
                sayacim.innerHTML = sayacdeger
                sayacdeger--;
                if (sayac < 0) {
                    clearInterval(interval)
                    window.location.href = '/Home/Index'
                }
            }, 1000)
            window.onload = function () {
                basla()
            }
        }
    </script>
    <script>
        var sayacdeger = 60;

        function basla() {
            var sayacim = document.getElementById('sayac');
            var interval = setInterval(function () {
                sayacim.innerHTML = sayacdeger;
                sayacdeger--;
                if (sayacdeger < 0) {
                    clearInterval(interval);
                    window.location.href = '/Home/Index';
                }
            }, 1000);
        }

        window.onload = function () {
            basla();
        };
    </script>
    <div style="margin-left:400px;margin-top:200px; margin-right:500px;">
        <form action="/Kullanici/girisKodDogrulama" method="post">
            <div class="form-group">
                <input type="hidden" name="kod1"  value="@ViewBag.deger">
            </div>
            <div class="form-group">
                <input type="hidden" name="k_id" value="@ViewBag.k_id">
            </div>
            <div class="text-center">
                <h5>Mailinize gelen Kodu</h5>
            </div>
            <div class="form-group">
                <label for="sifre">Kodu Girin:</label>
                <input type="password" class="form-control" placeholder="Kodu Girin" name="kod2">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <p>Kalan süre : <span id="sayac">60</span> saniye</p>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
