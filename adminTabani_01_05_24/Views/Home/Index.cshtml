@model adminTabani_01_05_24.Models.KullaniciHomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ZiyaretciLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Index</title>
</head>
<body style="background-color: rgba(51, 51, 51, 0.05)">
    <div style="margin-left:530px;">
        <h2>Son Gelişmeler</h2>

    </div>

    <div class="container" style="margin-top:100px;">
        <div class="text-center">
            <h4>Habeler</h4>
        </div>
        <table class="table">
            <thead style=" visibility:hidden">
                <tr>
                    <td colspan="4"></td>
                </tr>
            </thead>
            <tbody>

                @foreach (var haber in Model.haberler)
                {
                    <tr>
                        <td>@haber.Baslik</td>
                        @if (haber.icerik.ToString().Length > 20)
                        {
                            <td>@haber.icerik.ToString().Substring(0, 20)</td>
                        }
                        else
                        {
                            <td>@haber.icerik</td>
                        }
                        <td>@haber.PaylasanAd</td>
                        <td>@haber.tarih.ToString().Substring(0, 10)</td>
                    </tr>
                }

                <tr style="text-align:center;  height:70px;">
                    <td colspan="4"><a href="/Haber/Index" class="btn btn-success">Tümünü Görüntüle</a></td>
                </tr>

            </tbody>
        </table>
    </div>
    <div class="container" style="margin-top:75px;">
        <div class="text-center">
            <h4>Yazılar</h4>
        </div>
        <table class="table">
            <thead style=" visibility:hidden">
                <tr>
                    <td colspan="4"></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var yazi in Model.yazilar)
                {
                    <tr>
                        <td>@yazi.Baslik</td>
                        @if (yazi.icerik.ToString().Length > 20)
                        {
                            <td>@yazi.icerik.ToString().Substring(0, 20)</td>
                        }
                        else
                        {
                            <td>@yazi.icerik</td>
                        }
                        <td>@yazi.yazar_ad</td>
                        <td>@yazi.tarih.ToString().Substring(0, 10)</td>
                    </tr>
                }
                <tr style="text-align:center;  height:70px;">
                    <td colspan="4"><a class="btn btn-success" href="/Yazilar/Index">Tümünü Görüntüle</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container" style="margin-top:75px;">
        <div class="text-center">
            <h4>Resimler</h4>
        </div>
        <table class="table">
            <thead style=" visibility:hidden">
                <tr>
                    <td colspan="5"></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var resim in Model.resimler)
                {
                    <tr>
                        <td>@resim.baslik</td>
                        <td><img src="@Url.Content("~/Content/images/"+resim.dosyaYolu)" alt="resim" style="width:100%;height:auto; max-width:100px;cursor:pointer;" /></td>
                        @if (resim.aciklama.Length > 20)
                        {
                            <td>@resim.aciklama.ToString().Substring(0, 20)</td>
                        }
                        else
                        {
                            <td>@resim.aciklama</td>
                        }
                        <td>@resim.PaylasanAd</td>
                        <td>@resim.tarih.ToString().Substring(0, 10)</td>
                    </tr>
                }
                <tr style="text-align:center;  height:70px;">
                    <td colspan="5"><a class="btn btn-success" href="/Resim/Index">Tümünü Görüntüle</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container" style="margin-top:75px;">
        <div class="text-center">
            <h4>Tartışmalar</h4>
        </div>
        <table class="table">
            <thead style=" visibility:hidden">
                <tr>
                    <td colspan="4"></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var tartisma in Model.tartismalar)
                {
                    <tr>
                        <td>@tartisma.Baslik</td>
                        @if (tartisma.icerik.ToString().Length > 20)
                        {
                            <td>@tartisma.icerik.ToString().Substring(0, 20)</td>
                        }
                        else
                        {
                            <td>@tartisma.icerik</td>
                        }
                        <td>@tartisma.KullaniciAd</td>
                        <td>@tartisma.tarih.ToString().Substring(0, 10)</td>
                    </tr>
                }
                <tr style="text-align:center;  height:70px; ">
                    <td colspan="4"><a href="/Tartisma/Index" class="btn btn-success">Tümünü Görüntüle</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container" style="margin-top:75px;">
        <div class="text-center">
            <h4>Şiirler</h4>
        </div>
        <table class="table">
            <thead style=" visibility:hidden;">
                <tr>
                    <td colspan="4"></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var siir in Model.siirler)
                {
                    <tr>
                        <td>@siir.siirBaslik</td>
                        @if (siir.icerik.ToString().Length > 20)
                        {
                            <td>@siir.icerik.ToString().Substring(0, 20)</td>
                        }
                        else
                        {
                            <td>@siir.icerik</td>
                        }
                        <td>@siir.YazarAd</td>
                        <td>@siir.tarih.ToString().Substring(0, 10)</td>
                    </tr>
                }
                <tr style="text-align:center; height:70px;">
                    <td colspan="4"><a href="/Siir/ZiyaretciIndex" class="btn btn-success">Tümünü Görüntüle</a></td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
